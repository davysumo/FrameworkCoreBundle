{% apply inky_to_html|inline_css(source(asset('build/mail.css'))) %}
    <wrapper class="header">
        <container>
            <row class="collapse">
                {% block logo %}
                    <img width="135" src="{{ absolute_url(asset('build/images/logo-application-mail.gif')) }}" alt="{{ fallbacks.get('site_title') }}" align="center" class="float-center">
                {% endblock %}
            </row>
        </container>
    </wrapper>

    <container>
        <spacer size="16"></spacer>
        <row>
            {% block content %}
                {{ content|raw }}
            {% endblock %}
        </row>
    </container>
{% endapply %}
