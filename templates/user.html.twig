{% block head %}
  {{ include('@SumoCodersFrameworkCore/head.html.twig') }}
{% endblock %}

<body class="user h-100">

<div class="d-flex justify-content-end mt-3 mr-3">
  <div class="custom-control custom-switch dark-mode-switch" data-theme-toggler-wrapper>
    <input type="checkbox" class="custom-control-input" id="dark-mode" data-theme-toggler{% if theme.current == 'theme-dark' %} checked="checked"{% endif %}>
    <label class="custom-control-label" for="dark-mode">{{ 'core.themes.dark'|trans|ucfirst }} {{ 'core.themes.themes'|trans }}</label>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-7 col-lg-6 col-xl-4">
      <div class="card p-4 mt-5">
        <div class="text-center mb-3 py-5 px-sm-4 px-md-5">
          {% block logo_image %}
            <img class="img-responsive{% if theme.current != 'theme-dark' %} d-none{% endif %}" data-navbar-logo-dark src="{{ asset('build/images/logo-application-dark.svg') }}" alt="{{ fallbacks.get('site_title') }}">
            <img class="img-responsive{% if theme.current == 'theme-dark' %} d-none{% endif %}" data-navbar-logo src="{{ asset('build/images/logo-application.svg') }}" alt="{{ fallbacks.get('site_title') }}">
          {% endblock %}
        </div>

        {{ include('@SumoCodersFrameworkCore/notifications.html.twig') }}

        {% block main %}
        {% endblock %}

      </div>
    </div>
  </div>
</div>

{% block javascripts %}
  {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
