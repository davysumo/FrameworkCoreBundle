{% macro toast(message, type, delay = 10000, autohide) %}

  {% set icon = 'check' %}
  {% set role = 'status' %}
  {% set live = 'polite' %}
  {% if type == 'success' %}
    {% if autohide is null or autohide is not defined %}
      {% set autohide = true %}
    {% endif %}
  {% endif %}
  {% if type == 'info' %}
    {% set icon = 'info-circle' %}
    {% if autohide is null or autohide is not defined %}
      {% set autohide = true %}
    {% endif %}
  {% endif %}
  {% if type == 'warning' %}
    {% set icon = 'exclamation' %}
    {% if autohide is null or autohide is not defined %}
      {% set autohide = false %}
    {% endif %}
  {% endif %}
  {% if type == 'danger' %}
    {% set role = 'alert' %}
    {% set live = 'assertive' %}
    {% set icon = 'exclamation-triangle' %}
    {% if autohide is null or autohide is not defined %}
      {% set autohide = false %}
    {% endif %}
  {% endif %}

  <div class="toast toast-{{ type }}" role="{{ role }}" aria-live="{{ live }}" data-animation="true" aria-atomic="true" data-delay="{{ delay }}" data-autohide="{% if autohide %}true{% else %}false{% endif %}">
    <div class="toast-body">
      <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="{{ 'dialogs.close'|trans|capitalize }}">
        <span aria-hidden="true">&times;</span>
      </button>
      <div class="d-flex flex-row">
        <i class="fas fa-{{ icon }} mr-3 mt-1 toast-icon"></i>
        {{ message }}
      </div>
    </div>
  </div>
{% endmacro %}
