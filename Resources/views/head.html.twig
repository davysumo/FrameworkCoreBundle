<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <meta charset="UTF-8" />
    {# @todo use a sane default title, probable something from a configuration file #}
    <title>{% block title %}Welcome!{% endblock %}</title>

    {% block meta %}
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
        <meta name="description" content="">
        <meta name="keywords" content="">
        <meta name="author" content="SumoCoders">
    {% endblock %}

    {% block stylesheets %}
        {# Load full css if browser is > IE9 or not IE9 #}
        <!--[if gt IE 9]>
        {% stylesheets filter="compass" "@SumoCodersFrameworkCoreBundle/Resources/assets/sass/style.scss" %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        <![endif]-->
        <!--[if !IE]> -->
        {% stylesheets filter="compass" "@SumoCodersFrameworkCoreBundle/Resources/assets/sass/style.scss" %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        <!-- <![endif]-->

        {# Load css and bootstrap seperately if <= IE9 #}
        <!--[if lte IE 9]>
        {% stylesheets filter="compass" "@SumoCodersFrameworkCoreBundle/Resources/assets/sass/bootstrap.min.scss" %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% stylesheets filter="compass" "@SumoCodersFrameworkCoreBundle/Resources/assets/sass/bootstrap-responsive.min.scss" %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% stylesheets filter="compass" "@SumoCodersFrameworkCoreBundle/Resources/assets/sass/style_ie.scss" %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        <![endif]-->
    {% endblock %}

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    {% block head_javascripts %}
        <script>
            var jsData = [];
        </script>

        {% javascripts output="/js/libs.js"
            "@SumoCodersFrameworkCoreBundle/Resources/assets/js/libs/jquery.js"
            "@SumoCodersFrameworkCoreBundle/Resources/assets/js/libs/*"
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% javascripts output="/js/sumo.js" "@SumoCodersFrameworkCoreBundle/Resources/assets/js/sumo_plugins.js" %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% javascripts output="/js/app.js"
            "@SumoCodersFrameworkCoreBundle/Resources/assets/coffee/framework.data.coffee"
            "@SumoCodersFrameworkCoreBundle/Resources/assets/coffee/framework.locale.coffee"
            "@SumoCodersFrameworkCoreBundle/Resources/assets/coffee/framework.form.coffee"
            "@SumoCodersFrameworkCoreBundle/Resources/assets/coffee/framework.coffee"
            "@SumoCodersFrameworkCoreBundle/Resources/assets/coffee/framework.form.search.coffee"
            "@SumoCodersFrameworkCoreBundle/Resources/assets/coffee/app.coffee"
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}

    {% block icons %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}">
        <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon.png') }}">
        <link rel="image_src" href="{{ asset('image_src.png') }}" />
    {% endblock %}
</head>
