{% import '@SumoCodersFrameworkCore/macros.html.twig' as macros %}

{% for flashMessage in app.session.flashbag.get('success') %}
  {{ macros.toast(flashMessage, 'success') }}
{% endfor %}

{% for flashMessage in app.session.flashbag.get('report') %}
  {{ macros.toast(flashMessage, 'info') }}
{% endfor %}

{% for flashMessage in app.session.flashbag.get('warning') %}
  {{ macros.toast(flashMessage, 'warning') }}
{% endfor %}

{% for flashMessage in app.session.flashbag.get('error') %}
  {{ macros.toast(flashMessage, 'danger') }}
{% endfor %}
