{% for flashMessage in app.session.flashbag.get('success') %}
    <div class="alert alert-success alert-dismissible notification" role="status">
        <a class="close" data-dismiss="alert" title="{{ 'dialogs.close'|trans|capitalize }}">
            <i class="fa fa-close"></i>
            <span class="hide">{{ 'dialogs.close'|trans|capitalize }}</span>
        </a>
        {{ flashMessage }}
    </div>
{% endfor %}

