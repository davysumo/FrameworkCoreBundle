{% for flashMessage in app.session.flashbag.get('success') %}
    <div class="alert alert-success alert-dismissible notification fade show" role="status">
      {{ flashMessage }}
        <button type="button" class="close" data-dismiss="alert" aria-label="{{ 'dialogs.close'|trans|capitalize }}">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{% endfor %}

